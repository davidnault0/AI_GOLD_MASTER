# AI Model Configuration
# Copy this file to .env and fill in your values

# ====================================
# Trading Bot 24/7 Configuration
# ====================================

# AI Model Configuration
# Options: gpt-4o (cloud, haute qualité) ou qwen-3 (local, privé)
AI_MODEL=gpt-4o

# OpenAI GPT-4o Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Qwen 3 Local Configuration (si AI_MODEL=qwen-3)
QWEN3_ENDPOINT=http://localhost:8000
QWEN3_MODEL=qwen-3
QWEN3_MAX_TOKENS=2048
QWEN3_TEMPERATURE=0.7

# ====================================
# Market Data Configuration
# ====================================

# Trading Symbol (exemples: BTCUSDT, ETHUSDT, AAPL, TSLA)
TRADING_SYMBOL=BTCUSDT

# Data Provider
# Options: binance (crypto), coinbase (crypto), alphavantage (stocks), polygon (stocks)
DATA_PROVIDER=binance

# Market API Key (requis pour Alpha Vantage, Polygon, etc.)
# Binance et Coinbase fonctionnent sans clé pour les données publiques
MARKET_API_KEY=your-market-api-key-here

# Update Interval (millisecondes)
# 1000 = 1 seconde (recommandé)
UPDATE_INTERVAL=1000

# ====================================
# Notification Configuration
# ====================================

# Webhook URL pour recevoir les signaux
# Exemple: Discord, Slack, ou votre propre endpoint
WEBHOOK_URL=https://your-webhook-url.com

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ====================================
# Server Configuration (Render)
# ====================================

# Port HTTP (Render définit automatiquement)
PORT=3000

# Node Environment
NODE_ENV=production

# ====================================
# Network Configuration
# ====================================

# Hybrid Mode Configuration
# Enable to automatically route tasks to optimal model
HYBRID_MODE_ENABLED=false

# API Configuration
API_TIMEOUT=30000
MAX_RETRIES=3
RATE_LIMIT_PER_MINUTE=60

# ====================================
# TradingView Credentials (optionnel)
# ====================================
TRADINGVIEW_EMAIL=your-email@example.com
TRADINGVIEW_PASSWORD=your-secure-password
